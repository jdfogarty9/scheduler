  <script>
    // PDF button functionality
    document.getElementById('downloadPDFBtn').onclick = function() {
      window.print();
    }

    // Your FileMaker data injection
    var dashboardData = <<JSON_DATA>>;

    function renderTable(containerId, columns, rows, totals) {
      let html = '<table><thead><tr>' +
        columns.map(col => `<th>${col}</th>`).join('') +
        '</tr></thead><tbody>';
      rows.forEach(row => {
        html += '<tr>' + columns.map(col => `<td>${row[col]}</td>`).join('') + '</tr>';
      });
      if (totals) {
        html += '<tr style="font-weight:bold;">' + columns.map(col => `<td>${totals[col]||''}</td>`).join('') + '</tr>';
      }
      html += '</tbody></table>';
      document.getElementById(containerId).innerHTML = html;
    }





    function renderDashboard(data) {
      document.getElementById('cardSettled').textContent = data.cards.settled;
      document.getElementById('cardDeals').textContent = data.cards.numDeals;
      
        // Date Range card
  if (data.filters && data.filters.dateStart && data.filters.dateEnd) {
    document.getElementById('cardDateRange').textContent = `${data.filters.dateStart} - ${data.filters.dateEnd}`;
  } else {
    document.getElementById('cardDateRange').textContent = '';
  }

  // Staff card
  if (data.staffList && data.staffList.length > 0) {
    document.getElementById('cardStaff').textContent = data.staffList.join(', ');
  } else {
    document.getElementById('cardStaff').textContent = '';
  }

      // Pie Legend to the right
      document.getElementById('pieLegend').innerHTML = data.charts.pie.labels.map((label, i) =>
        `<div style="display:flex;align-items:center;margin-bottom:7px;">
          <div style="width:16px;height:16px;background:${data.charts.pie.colors[i]};margin-right:7px;"></div>
          <span>${label}</span>
        </div>`).join('');
      // Tables (middle below right, left stretched)
      renderTable('table1', data.tables.saleType.columns, data.tables.saleType.rows, data.tables.saleType.totals);
      renderTable('table2', data.tables.quotes.columns, data.tables.quotes.rows, data.tables.quotes.totals);
      renderTable('table3', data.tables.accountManager.columns, data.tables.accountManager.rows, data.tables.accountManager.totals);

      // Optional: If data contains a managerTotals structure for the new table, populate it
      if (data.tables && data.tables.managerTotals && Array.isArray(data.tables.managerTotals.rows)) {
        const tbody = document.querySelector('#newTableTable tbody');
        if (tbody) {
          tbody.innerHTML = '';
          const managers = data.tables.managerTotals.rows;
          managers.forEach(r => {
            const tr = document.createElement('tr');
            const nameCell = document.createElement('td');
            nameCell.textContent = r.Manager || '';
            tr.appendChild(nameCell);

            ['New Volume','SLB','Roll','Recontract','Total'].forEach(col => {
              const td = document.createElement('td');
              td.textContent = (r[col] !== undefined && r[col] !== null) ? r[col] : '';
              tr.appendChild(td);
            });
            tbody.appendChild(tr);
          });
        }
      }
    }

window.addEventListener('DOMContentLoaded', function() {
  // Pie Chart
  window.pieChartRef = new Chart(document.getElementById('pieChart'), {
    type: 'pie',
    data: {
      labels: dashboardData.charts.pie.labels,
      datasets: [{
        data: dashboardData.charts.pie.data,
        backgroundColor: dashboardData.charts.pie.colors,
      }]
    },
    options: {
      plugins: { legend: { display: false } },
      responsive: false,
      maintainAspectRatio: false
    }
  });

  // Bar Chart
  window.barChartRef = new Chart(document.getElementById('barChart'), {
    type: 'bar',
    data: {
      labels: dashboardData.charts.bar.labels,
      datasets: [
        { label: 'Purchase$', data: dashboardData.charts.bar.data1, backgroundColor: '#0074d9' },
        { label: '#Quotes', data: dashboardData.charts.bar.data2, type: 'line', borderColor: '#ff851b', backgroundColor: 'rgba(255,133,27,0.2)', yAxisID: 'y2' }
      ]
    },
    options: {
      plugins: { legend: { display: true } },
      responsive: false,
      maintainAspectRatio: false,
      scales: {
        y: { beginAtZero: true, title: { display: true, text: 'Purchases' } },
        y2: { beginAtZero:true, position: 'right', grid: { drawOnChartArea: false }, title: { display: true, text: '#Quotes' } }
      }
    }
  });

  // === Date Selector Population ===
  if (dashboardData.filters) {
    function toDateInputFormat(dateStr) {
      if (!dateStr) return '';
      // Handles d/m/yyyy or dd/mm/yyyy
      const parts = dateStr.split('/');
      if (parts.length !== 3) return '';
      return `${parts[2]}-${parts[1].padStart(2, '0')}-${parts[0].padStart(2, '0')}`;
    }
    const startDateInput = document.getElementById('startDate');
    const endDateInput = document.getElementById('endDate');
    if (startDateInput) startDateInput.value = toDateInputFormat(dashboardData.filters.dateStart);
    if (endDateInput) endDateInput.value = toDateInputFormat(dashboardData.filters.dateEnd);
  }

  renderDashboard(dashboardData);
});
    function updateDashboard(jsonString) {
      var data = JSON.parse(jsonString);
      renderDashboard(data);
      // Update Pie Chart
      if (window.pieChartRef) {
        window.pieChartRef.data.labels = data.charts.pie.labels;
        window.pieChartRef.data.datasets[0].data = data.charts.pie.data;
        window.pieChartRef.data.datasets[0].backgroundColor = data.charts.pie.colors;
        window.pieChartRef.update();
      }
      // Update Bar Chart
      if (window.barChartRef) {
        window.barChartRef.data.labels = data.charts.bar.labels;
        window.barChartRef.data.datasets[0].data = data.charts.bar.data1;
        window.barChartRef.data.datasets[1].data = data.charts.bar.data2;
        window.barChartRef.update();
      }

      // If incoming JSON contains managerTotals, populate the new table
      try {
        var parsed = JSON.parse(jsonString);
        if (parsed.tables && parsed.tables.managerTotals) {
          renderDashboard(parsed); // renderDashboard handles the managerTotals if present
        }
      } catch (e) {
        // ignore
      }
    }

    // Date selector logic (add your own filtering as needed)
    function applyDates() {
      var start = document.getElementById('startDate').value;
      var end = document.getElementById('endDate').value;
      // You can add your own logic here to pass the selected dates to FileMaker or filter dashboardData
      // For now, just log to console
      console.log('Apply date filter:', start, end);
      // Example: updateDashboard with filtered data
      // updateDashboard(JSON.stringify(filteredDashboardData));
    }
  </script>
