  <script>
    // Arc length for the semi-circle path above (for 80px radius and 180° arc)
    const r = 80;
    const arcLength = Math.PI * r; // ≈ 251.3

    function setGaugePercent(percent) {
      percent = Math.max(0, Math.min(100, percent));
      const filled = (percent / 100) * arcLength;
      const unfilled = arcLength - filled;

      const gaugeValue = document.getElementById('gaugeValuePercent');
      gaugeValue.setAttribute('stroke-dasharray', arcLength);
      gaugeValue.setAttribute('stroke-dashoffset', unfilled);

      document.getElementById('gaugeNumberPercent').textContent = percent;
    }

    function setGaugeDollar(current, target) {
      let percent = target > 0 ? (current / target) * 100 : 0;
      percent = Math.max(0, Math.min(100, percent));
      const filled = (percent / 100) * arcLength;
      const unfilled = arcLength - filled;

      const gaugeValue = document.getElementById('gaugeValueDollar');
      gaugeValue.setAttribute('stroke-dasharray', arcLength);
      gaugeValue.setAttribute('stroke-dashoffset', unfilled);

      document.getElementById('gaugeNumberDollar').textContent = `$${current.toFixed(1)}M`;
    }

    // Initial state: 51% and $21.9M/$137.9M
    setGaugePercent(51);
    setGaugeDollar(21.9, 43);

    // Example: To change to 75% and $103.4M/$137.9M, call:
    // setGaugePercent(75);
    // setGaugeDollar(103.4, 137.9);
  </script>
